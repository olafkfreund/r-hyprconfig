#!/usr/bin/env bash
# direnv configuration for r-hyprconfig development

# Use the devenv flake
if ! has nix_direnv_version || ! nix_direnv_version 3.0.4; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.0.4/direnvrc" "sha256-DzlYZ33mWF/Gs8DDeyjr8mnVmQGx7ASYqA5WlxwvBG4="
fi

# Load the development environment
use flake

# Additional environment setup
export RUST_LOG=debug
export RUST_BACKTRACE=1
export CARGO_TARGET_DIR="target"

# Add project binary to PATH for easy testing
PATH_add "target/release"
PATH_add "target/debug"

# Set up development aliases in the shell
alias dev-build="nix develop --command cargo build"
alias dev-run="nix develop --command cargo run"
alias dev-test="nix develop --command cargo test"
alias dev-fmt="nix develop --command cargo fmt --all"
alias dev-clippy="nix develop --command cargo clippy --all-targets --all-features"
alias dev-audit="nix develop --command cargo audit"

# Show helpful information
echo "ü¶Ä R-Hyprconfig development environment loaded!"
echo "üìÅ Project: $(basename $PWD)"
echo "üîß Available commands:"
echo "  dev-build  - Build the project"
echo "  dev-run    - Run the application"
echo "  dev-test   - Run tests"
echo "  dev-fmt    - Format code"
echo "  dev-clippy - Lint code"
echo "  dev-audit  - Security audit"